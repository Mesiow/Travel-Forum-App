<!DOCTYPE html>
<html>
	<head>
		<!--include semantic ui-->
		<link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" rel="stylesheet" type="text/css">
		<link href="/stylesheets/show.css" rel="stylesheet" type="text/css">
		<!--Include jQuery 3.5.1 cdn-->
		<script
  			src="https://code.jquery.com/jquery-3.5.1.min.js"
  			integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
  			crossorigin="anonymous">
  		</script>

		<title>Travel Forum</title>
	</head>
	<body>
		<div id="navbar" class="ui fixed small main menu">
			<!--<div class="ui container">-->
				<div id="site-name" class="header item"><i class="globe icon"></i>Travel Forum</div>
				<a href="/topics" class="item">Home</a>
				<a href="/topics/new" class="item">New Topic</a>
				<div class="right menu"> <!--Shift items to the right-->
					<% if(!currentUser){%> <!--if there is no current user in the session show links-->
						<a href="/register" class="item">Sign Up</a>
						<a href="/login" class="item">Log In</a>
					<%}else{%>
						<a href="/" class="item">Signed in as <%=currentUser.username%></a>
						<a href="/logout" class="item">Logout</a>
					<%}%>
				</div>
			<!--</div>-->
		</div>

		
		<div style="padding-top:55px;" class="ui text container">
			<% if(error && error.length > 0){%> <!--check if error exists and its length is greater than 0-->
				<div class="ui error message">
					<i class="close icon"></i>
					<div class="header">
						<%= error %>
					</div>
				</div>
			<% } %>

			<!--display success if it exists and its length is greater than 0-->
			<% if(success && success.length > 0){%>
				<div class="ui success message">
					<i class="close icon"></i>
					<div class="header">
						<%= success %>
					</div>
				</div>
			<% } %>
		</div>